
{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block css %}
    <link rel="stylesheet" href="../../public/assets/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
{% endblock %}


{% block body %}
    <h2>Welcome {{ profile.username }}</h2>
    <div class="container" style="background-color:#f1f1f1;">
        <a href="{{ logoutRoute }}"><button type="button" class="Regbtn">logout</button></a>
    </div>
    <div class="container">
        <div class="row" style="margin-top: 25px;">
            <div class="conversation-wrap col-lg-3">
                {% for user in users %}
                    <div class="media conversation">
                        <a class="pull-left" href="#">
                            <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 50px; height: 50px;" src="data:image/png;base64,">
                        </a>
                        <div class="media-body">
                            <h5 class="media-heading">{{ user.username }}</h5>
                            {% if user.isOnline  == true %}
                                <span class="glyphicon glyphicon-user" style="color: lawngreen"></span>
                            {% else %}
                                <span class="glyphicon glyphicon-user" style="color: red"></span>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>



            <div class="message-wrap col-lg-8">
                <div class="msg-wrap">
                   {% for message in messages %}
                      <div class="media msg">
                          <a class="pull-left" href="#">
                            <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 32px; height: 32px;" src="data:image/png;base64,">
                          </a>
                          <div class="media-body">
                            <small class="pull-right time"><i class="fa fa-clock-o"></i> {{ message.created |date('Y-m-d\\ H:i') }}</small>
                            <h5 class="media-heading">{{ message.username }}</h5>
                            <small class="col-lg-10">{{ message.message | raw }}</small>
                          </div>
                      </div>
                   {% endfor %}
                </div>

                <div class="send-wrap" style="margin-top: 30px">
                    <textarea id="message" class="form-control send-message" rows="3" placeholder="Write a reply..."></textarea>
                </div>
                <div class="btn-panel">
                    <a href="#" id="btn-send-message" class=" col-lg-4 text-right btn   send-message-btn pull-right" role="button"><i class="fa fa-plus"></i> Send Message</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

